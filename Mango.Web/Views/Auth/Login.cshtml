@model LoginRequestDto

<form method="post">
    <div class="container border p-3">
        <div class="row text-center">
            <h1>Login</h1>
        </div>
        
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-3">
                <input asp-for="Username" class="form-control" placeholder="User Name"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-3">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-3">
                <button type="submit" class="btn btn-primary form-control" valus="Login">Login</button>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}
